---
interface Props {
  project: {
    id: number;
    title: string;
    period: string;
    type: string;
    description: string;
    thumbnail: string;
    repository: string | null;
    stack: string[];
  };
}

const { project } = Astro.props;
---

<article
  aria-labelledby={`project-${project.id}-title`}
  class="
    group select-none h-full flex flex-col overflow-hidden w-full sm:w-auto
    rounded-2xl p-5 border bg-white/5
    border-zinc-200/60 dark:border-zinc-800
    shadow-sm transition-all duration-300 ease-out

    hover:shadow-lg hover:-translate-y-0.5
  "
>
  <!-- GitHub Icon -->
  <a
    aria-label="Abrir repositorio en GitHub"
    class="size-7 self-end opacity-80 hover:opacity-100 transition"
    href={project.repository}
    target="_blank"
    rel="noopener noreferrer"
  >
    <svg width="28" height="28">
      <use xlink:href="/sprite.svg#github" />
    </svg>
  </a>

  <!-- Content -->
  <div class="flex flex-col gap-3 mt-2 h-full">
    <header class="flex flex-col gap-0.5">
      <h2 class="font-semibold text-[1.05rem] sm:text-lg md:text-xl leading-tight text-neutral-900 dark:text-white">
        {project.title}
      </h2>
      <h3 class="text-xs sm:text-sm text-neutral-600 dark:text-neutral-400">
        {project.type}
      </h3>
    </header>

    <p class="text-sm sm:text-base leading-relaxed mt-1 grow text-neutral-700 dark:text-neutral-300">
      {project.description}
    </p>
  </div>
</article>

