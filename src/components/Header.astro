<style is:inline>
  #navbar, #mobile-menu {
    backdrop-filter: blur(14px);
    background-color: #ffffff8c;
    transition:
      height 250ms ease,
      background-color 250ms ease;
  }

  .dark #navbar, #mobile-menu {
    background: #0f0f0f8c;
    border-bottom-color: #ffffff0f;
  }

  /* INDICADOR */
  .nav-indicator {
    position: absolute;
    top: 0;
    bottom: 0;
    height: 100%;
    background-color: #c7c7c765;
    border-radius: 0.65rem;
    backdrop-filter: blur(6px);
    transition:
      transform 250ms ease,
      width 250ms ease,
      opacity 200ms ease;
    pointer-events: none;
  }

  /* MENÚ MÓVIL QUE CRECE DESDE EL HEADER HACIA ABAJO */
  #mobile-menu {
    transform-origin: top;
    transform: scaleY(0);
    opacity: 0;

    max-height: 0;
    overflow: hidden;

    transition:
      transform 320ms cubic-bezier(0.25, 0.9, 0.32, 1.2),
      opacity 180ms ease-out,
      max-height 350ms ease;
  }

  #mobile-menu.show {
    transform: scaleY(1);
    opacity: 1;
    max-height: 600px;
  }

  nav a:hover,
  #mobile-menu a:hover,
  #mobile-toggle svg:hover {
    opacity: 75%;
  }
</style>

