---
interface Props {
  options: string[];
  active: string;
}

const { options, active } = Astro.props;
---

<nav
  aria-label="Filtro de proyectos"
  class="flex items-center flex-wrap gap-2 mb-5 text-sm"
>
  <span
    class="capitalize font-medium text-neutral-300"
  >
    filtros:
  </span>

  {
    options.map((option) => {
      const isActive = active === option;

      return (
      <button
          aria-pressed={isActive}
          data-filter={option}
          class={[
            "px-3 py-1.5 rounded-full border transition-colors duration-200",
            "backdrop-blur-sm",
            "border-white/10 text-neutral-300 hover:text-white hover:border-white/20",
            isActive &&
              "border-white/20 bg-white/5 text-white shadow-sm"
          ]
            .filter(Boolean)
            .join(" ")
          }
        >
          {option}
        </button>
      );
    })
  }
</nav>
