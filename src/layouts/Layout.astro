---
import Header from "@components/Header.astro";
import Base from "./Base.astro";
import Footer from "@components/Footer.astro";
import FloatingContactButton from "@components/FloatingContactButton.astro";
import ContactModal from "@components/ContactModal.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <Base title={title} />
  <body
    class="relative min-h-screen flex flex-col items-center text-base tracking-normal bg-gray-100 text-[#0a111a] dark:bg-[#0a111a] dark:text-gray-100"
  >
    <Header client:idle />
    
    <main id="app" class="flex grow flex-col gap-6 w-2/3 text-sm">
      <slot />
    </main>

    <FloatingContactButton />
    <ContactModal />
    
    <Footer />
  </body>
</html>
