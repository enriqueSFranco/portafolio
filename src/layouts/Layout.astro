---
import Header from "@components/Header.astro";
import Base from "./Base.astro";
import Footer from "@components/Footer.astro";
import FloatingContactButton from "@components/FloatingContactButton.astro";
import ContactModal from "@components/ContactModal.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <Base title={title} />
  <body
    class="min-h-screen items-center text-balance tracking-normal bg-slate-100 text-gray-700 dark:text-white dark:bg-black"
  >
    <Header />

    <main
      id="app"
      class="px-4 flex flex-col grow w-full lg:w-2/3 mx-auto"
    >
    <div class="prose prose-invert prose-neutral space-y-10">
      <slot />
    </div>
    </main>

    <FloatingContactButton />
    <ContactModal />

    <Footer />
  </body>
</html>

<script src="@scripts/reveal.ts"></script>
